<div
  class="bg-indigo-50 flex flex-col min-h-screen gap-y-5 relative justify-center items-center py-10"
>
  <i
    class="fa-solid fa-left-long text-2xl absolute top-2 left-3 cursor-pointer"
    id="back"
  ></i>
  <h2 class="primary-font text-5xl" id="userId">User: {{userId}}</h2>
  <span class="flex justify-center items-center flex-col gap-y-5">
    <span class="flex justify-center items-center gap-x-5">
      <img
        class="border-2 rounded-full border-orange-600 border-solid"
        style="max-width:80px;max-height:80px;min-width:80px;min-height:80px;"
        id="profilePhoto"
      />
      <label for="roles">Role:</label>
      <select name="roles" id="roleSelect">
        <option value="USER">USER</option>
        <option value="ADMIN">ADMIN</option>
      </select>
    </span>
    <p class="secondary-font text-xl" id="userFirstName"></p>
    <p class="secondary-font text-xl" id="userLastName"></p>
    <p class="secondary-font text-xl" id="userEmail"></p>

  </span>
  <span class="flex justify-center items-center gap-x-5">
    <button
      class="p-2 bg-red-600 secondary-font text-white rounded-md text-sm"
      id="deleteAccountDialogButton"
    >Delete account</button>
  </span>
  <dialog class="bg-indigo-500 p-5 rounded-md" id="profileDialog">
    <p class="text-white text-lg mb-5">Are you sure you want to delete this
      account? All information related will be lost</p>
    <span class="flex items-center justify-end gap-x-5">
      <button
        class="p-2 bg-orange-600 secondary-font text-white rounded-md text-sm"
        id="cancelDeleteButton"
      >Cancel</button>
      <button
        class="p-2 bg-red-600 secondary-font text-white rounded-md text-sm"
        id="deleteButton"
      >Delete</button>
    </span>
  </dialog>
</div>

<script src="/js/user.js"></script>